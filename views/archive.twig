{% extends 'layout.twig' %}

{% block content %}
    {% if category.description %}
        {{ category.description }}
    {% endif %}
    {% for post in posts %}
        <div class="post">
            <a href="{{ post.link }}">
                <h2>{{ post.title }}</h2>
                <img src="{{ post.thumbnail.src('large') }}" />
            </a>
        </div>
    {% endfor %}
{% endblock %}